{
  "name": "Kvalood Tools",
  "version": "0.1.29",
  "description": "Helper for Tinkoff Investments",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "management",
    "declarativeContent",
    "storage",
    "notifications",
    "webRequest",
    "scripting"
  ],
  "host_permissions": [
    "https://*.tinkoff.ru/terminal/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/page.js",
        "js/helpers.js",
        "js/alor.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tinkoff.ru/terminal/*",
        "https://www.tinkoff.ru/terminal/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "externally_connectable":   {
    "matches": [
      "*://*.tinkoff.ru/terminal/*"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Kvalood Tools",
    "default_popup": "popup.html"
  }
}
