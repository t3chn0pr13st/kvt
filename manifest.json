{
  "name": "Kvalood Tools",
  "version": "0.1.9",
  "description": "Helper for Tinkoff Investments",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "management",
    "declarativeContent",
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "https://*.tinkoff.ru/terminal/*"
  ],
  "web_accessible_resources": [
    "js/page.js"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tinkoff.ru/terminal/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at":  "document_start"
    }
  ],
  "externally_connectable":   {
    "matches": [
      "*://*.tinkoff.ru/terminal/*"
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Kvalood Tools",
    "default_popup": "popup.html"
  }
}
